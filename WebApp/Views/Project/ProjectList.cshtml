            <div class="m_datatable m-datatable m-datatable--default m-datatable--loaded" id="local_data" style="position: static; zoom: 1;">
                <table class="m-datatable__table" style="display: block; min-height: 300px; overflow-x: auto;">
                    <thead class="m-datatable__head">
                        <tr class="m-datatable__row">
                            <th data-field="Project" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 110px;">Project</span></th>
                            <th data-field="Fleet Owner" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 100px;">Fleet Owner</span></th>
                            <th data-field="Project" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 110px;">Contact Name</span></th>
                            <th data-field="Project" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 110px;">Contact Phone#</span></th>
                            <th data-field="Project" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 110px;">Address</span></th>
                            <th data-field="Status" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 110px;">Status</span></th>
                            @*<th data-field="Created Date" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 110px;">Created Date</span></th>*@
                            <th data-field="Sites" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 110px;">Sites</span></th>
                            <th data-field="Pool Vehicle" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 110px;">Pool Vehicle</span></th>
                            @*<th data-field="Scheduler" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 110px;">Scheduler</span></th>
        <th data-field="Scheduler Status" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 110px;">Scheduler Status</span></th>*@
                            <th data-field="Actions" class="m-datatable__cell m-datatable__cell--sort"><span style="width: 110px;">Actions</span></th>
                        </tr>
                    </thead>
                    <tbody class="m-datatable__body" style="">
                        <tr ng-if="totalCount <= 0" class="no-records-row">
                            <td>
                                No records found
                            </td>
                        </tr>
                        <tr data-row="0" class="m-datatable__row" style="left: 0px;" ng-repeat="project in projectlist">
                            <td data-field="Project" class="m-datatable__cell"><span style="width: 110px;">{{project.Name}}</span></td>
                            <td data-field="Fleet Owner" class="m-datatable__cell"><span style="width: 100px;">{{project.FleetOwnerName}}</span></td>
                            <td data-field="Project" class="m-datatable__cell"><span style="width: 110px;">{{project.ContactName}}</span></td>
                            <td data-field="Project" class="m-datatable__cell"><span style="width: 110px;">{{project.ContactPhone}}</span></td>
                            <td data-field="Project" class="m-datatable__cell"><span style="width: 110px;">{{project.Address}}</span></td>
                            <td data-field="Status" class="m-datatable__cell">
                                <span style="width: 110px;">
                                    <span class="m-badge pl-3 m-badge--warning pr-3" ng-if="project.Status == '0'">
                                        Active
                                    </span>
                                </span>
                                <span style="width: 100px;">
                                    <span class="m-badge pl-3 m-badge--success pr-3" ng-if="project.Status == '1'">
                                        InActive
                                    </span>
                                </span>
                                <span style="width: 100px;">
                                    <span class="m-badge pl-3 m-badge--wide pr-3" ng-if="project.Status == '2'">
                                        Pending
                                    </span>
                                </span>
                            </td>
                            @*<td data-field="Created Date" class="m-datatable__cell"><span style="width: 110px;">{{project.CreatedDate | jsonDate }}</span></td>*@
                            <td data-field="Sites" class="m-datatable__cell"><span style="width: 110px;">{{project.TotalSites}}</span></td>

                            <td data-field="Sites" class="m-datatable__cell">
                                <span style="width: 110px;" ng-if="project.IsPoolVehicle == true">
                                    @*<input type="checkbox" ng-model="project.IsPoolVehicle" disabled>*@
                                    Yes
                                </span>
                                <span style="width: 110px;" ng-if="project.IsPoolVehicle != true">
                                    No
                                </span>
                            </td>
                            @*<td data-field="Scheduler" class="m-datatable__cell"><span style="width: 110px;">Edit</span></td>
        <td data-field="Scheduler Status" class="m-datatable__cell"><span style="width: 110px;">Active</span></td>*@
                            <td data-field="Actions" class="m-datatable__cell">
                                <span style="overflow: visible; position: relative; width: 90px;">
                                    <a href="/Project/EditProject/{{project.Id}}" class="m-portlet__nav-link btn m-btn m-btn--hover-accent m-btn--icon m-btn--icon-only m-btn--pill" title="Edit">
                                        <i class="la la-edit"></i>
                                    </a>
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="m-datatable__pager m-datatable--paging-loaded clearfix">
                    <ul class="m-datatable__pager-nav">
                        <li>
                            <a title="First" ng-click="firstPage()"
                               class="m-datatable__pager-link m-datatable__pager-link--first"
                               ng-class="{'m-datatable__pager-link--disabled': pageIndex == 1}"><i class="la la-angle-double-left"></i></a>
                        </li>
                        <li>
                            <a title="Previous" ng-click="previousPage()"
                               class="m-datatable__pager-link m-datatable__pager-link--prev "
                               ng-class="{'m-datatable__pager-link--disabled': pageIndex == 1}"><i class="la la-angle-left"></i></a>
                        </li>

                        <li ng-repeat="i in [] | range:numOfPages" ng-if="(i <= maxSize)">
                            <a class="m-datatable__pager-link m-datatable__pager-link-number"
                               ng-class="{'m-datatable__pager-link--active': i == pageIndex}"
                               ng-click="pageChanged(i)">{{i}}</a>
                        </li>

                        <li ng-if="rightHide">
                            <a title="More pages" ng-click="morePages()" class="m-datatable__pager-link m-datatable__pager-link--more-prev">
                                <i class="la la-ellipsis-h"></i>
                            </a>
                        </li>

                        <li>
                            <a title="Next" ng-click="nextPage()" class="m-datatable__pager-link m-datatable__pager-link--next"
                               ng-class="{'m-datatable__pager-link--disabled': pageIndex == numOfPages}"><i class="la la-angle-right"></i></a>
                        </li>
                        <li>
                            <a title="Last" ng-click="lastPage()" class="m-datatable__pager-link m-datatable__pager-link--last"
                               ng-class="{'m-datatable__pager-link--disabled': pageIndex == numOfPages}"><i class="la la-angle-double-right"></i></a>
                        </li>
                    </ul>
                    <div class="m-datatable__pager-info">
                        <div style="width:100px" class="pull-left mr-2">
                            <select id="drpPage" class="form-control form-control-sm" ng-model="pageSizeSelected" ng-change="changePageSize()">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                            </select>
                        </div>
                        <div class="pull-right mt-1">
                            <span class="m-datatable__pager-detail">Displaying {{((pageIndex -1) * pageSizeSelected) + 1}} - {{pageIndex * pageSizeSelected > totalCount ? totalCount : pageIndex * pageSizeSelected}} of {{totalCount}} records</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
