@model int?

@{
    ViewBag.Title = "Add Site Vehicle Type";
    ViewBag.MainMenu = "mProject";
    ViewBag.SubMenu = "sAddSiteVehicleType";
}

@section controller {
    <script src="~/Angular/controllers/siteVehicleType/add-site-Vehicle-type.js"></script>
}

<input type="hidden" name="siteId" id="siteId" value="@Model" />
<input type="hidden" name="SiteName" id="siteName" value="@ViewBag.SiteName" />
<div ng-controller="add_site_vehicle_type">
    <h4 class="link-heading"><a href="/Site/SiteList">@ViewBag.SiteName</a> | Add Vehicle Details</h4>

    <form autocomplete="off" name="frm">
        <h4>Vehicle Detail Information</h4> <hr />
    <div class="form-group m-form__group row">
        <div class="col-lg-4">
            <label class="mandatory">Vehicle Type</label>
            <select tabindex="-98" class="form-control" id="vehicleType" onchange="getVehicleSpecification()">
                <option value="0">--Select Vehicle Type--</option>
            </select>
        </div>
        <div class="col-lg-4">
            <label class="mandatory">Vehicle Price</label>
            <input ng-num="10" class="form-control m-input" ng-model="siteVehicle.VehiclePrice" id="vehiclePrice" name="vehiclePrice" type="number" required/>
            <span class="text-danger" ng-show="(frm.vehiclePrice.$touched || frm.vehiclePrice.$dirty && frm.vehiclePrice.$invalid)">
                <span ng-show="frm.vehiclePrice.$error.required">Enter Vehicle Price</span>
            </span>
        </div>
        <div class="col-lg-4">
            <label class="">Specification</label>
            <select tabindex="-98" class="form-control" id="vehicleSpecification" >
                <option value="0">--First Select Vehicle Type--</option>
            </select>
        </div>
    </div>
        <div class="form-group m-form__group row">
            <div class="col-lg-4">
                <label class="mandatory">Side(Inches)</label>
                <div class="row">
                    <div class="col-lg-6">
                        <input ng-num="5" class="form-control m-input" placeholder="Height" ng-model="siteVehicle.SideHeight" name="sideheight" type="number" min="1" required/>
                        <span class="text-danger" ng-show="(frm.sideheight.$touched || frm.sideheight.$dirty && frm.sideheight.$invalid)">
                            <span ng-show="frm.sideheight.$error.required">Enter side height</span>
                            <span ng-show="frm.sideheight.$error.min">SideHeight cannot be less then 1</span>
                        </span>
                    </div>
                    <div class="col-lg-6">
                        <input ng-num="5"  class="form-control m-input" placeholder="Width" ng-model="siteVehicle.SideWidth" name="sidewidth" type="number" min="1" required/>
                        <span class="text-danger" ng-show="(frm.sidewidth.$touched || frm.sidewidth.$dirty && frm.sidewidth.$invalid)">
                            <span ng-show="frm.sidewidth.$error.required">Enter side width</span>
                            <span ng-show="frm.sidewidth.$error.min">SideWidth cannot be less then 1</span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <label class="mandatory">Front(Inches)</label>
                <div class="row">
                    <div class="col-lg-6">
                        <input ng-num="5" class="form-control m-input" placeholder="Height" ng-model="siteVehicle.FrontHeight" name="frontheight" type="number" min="1" required/>
                        <span class="text-danger" ng-show="(frm.frontheight.$touched || frm.frontheight.$dirty && frm.frontheight.$invalid)">
                            <span ng-show="frm.frontheight.$error.required">Enter front height</span>
                            <span ng-show="frm.frontheight.$error.min">FrontHeight cannot be less then 1</span>
                        </span>
                    </div>
                    <div class="col-lg-6">
                        <input ng-num="5" class="form-control m-input" placeholder="Width" ng-model="siteVehicle.FrontWidth" name="frontwidth" type="number" min="1" required/>
                        <span class="text-danger" ng-show="(frm.frontwidth.$touched || frm.frontwidth.$dirty && frm.frontwidth.$invalid)">
                            <span ng-show="frm.frontwidth.$error.required">Enter front width</span>
                            <span ng-show="frm.frontwidth.$error.min">FrontWidth cannot be less then 1</span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <label class="mandatory">Rear(Inches)</label>
                <div class="row">
                    <div class="col-lg-6">
                        <input ng-num="5" class="form-control m-input" placeholder="Height" ng-model="siteVehicle.RearHeight"  name="rearheight" type="number" min="1" required/>
                        <span class="text-danger" ng-show="(frm.rearheight.$touched || frm.rearheight.$dirty && frm.rearheight.$invalid)">
                            <span ng-show="frm.rearheight.$error.required">Enter rear height</span>
                            <span ng-show="frm.rearheight.$error.min">RearHeight cannot be less then 1</span>
                        </span>
                    </div>
                    <div class="col-lg-6">
                        <input ng-num="5" class="form-control m-input" placeholder="Width" ng-model="siteVehicle.RearWidth" name="rearwidth" type="number" min="1" required/>
                        <span class="text-danger" ng-show="(frm.rearwidth.$touched || frm.rearwidth.$dirty && frm.rearwidth.$invalid)">
                            <span ng-show="frm.rearwidth.$error.required">Enter rear width</span>
                            <span ng-show="frm.rearwidth.$error.min">RearWidth cannot be less then 1</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    <div class="form-group m-form__group">
        <input type="submit" ng-disabled="frm.$invalid" ng-click="save()" value="Submit" class="btn m-btn--square btn-success" />
        <a href="/SiteVehicleType/Types/@Model$@ViewBag.SiteName$false" class="btn m-btn--square btn-danger">Cancel</a>
        <p class="text-danger" style="display:none">Please fill all mandatory fields</p>
    </div>
    </form>
</div>