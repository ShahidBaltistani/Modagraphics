
@{
    ViewBag.Title = "Add Fleet Owner";
    ViewBag.MainMenu = "mFleetOwner";
    ViewBag.SubMenu = "sAddFleetOwner";
}

@section controller {
    <script src="~/Angular/controllers/fleetOwner/fleet-owner-add.js"></script>
}

<form ng-controller="fleet_owner_add" autocomplete="off" name="frm">
    <h4>Profile Information</h4> <hr />
    <div class="form-group m-form__group row">
        <div class="col-lg-4">
            <label class="mandatory">First Name</label>
            <input type="text" class="form-control m-input" name="firstName" ng-model="fleet_owner.FirstName" required />
            <span class="text-danger" ng-show="(frm.firstName.$touched || frm.firstName.$dirty && frm.firstName.$invalid)">
                <span ng-show="frm.firstName.$error.required">Enter first name</span>
            </span>
        </div>
        <div class="col-lg-4">
            <label class="mandatory">Last Name</label>
            <input type="text" class="form-control m-input" name="lastName" ng-model="fleet_owner.LastName" required/>
            <span class="text-danger" ng-show="(frm.lastName.$touched || frm.lastName.$dirty && frm.lastName.$invalid)">
                <span ng-show="frm.lastName.$error.required">Enter last name</span>
            </span>
        </div>
        <div class="col-lg-4">
            <label class="mandatory">Email</label>
            <input id="EmailFocusOut" type="email" class="form-control m-input" name="email" ng-model="fleet_owner.EmailAddress" ng-blur="EmailCheck()" required/>
            <span class="text-danger" ng-show="(frm.email.$touched || frm.email.$dirty && frm.email.$invalid)">
                <span ng-show="frm.email.$error.required">Enter email</span>
                <span ng-show="frm.email.$error.email">Enter valid email</span>
                <span ng-show="fleet_owner.EmailAddress != '' && fleet_owner.EmailAddress != null  && UniqueEmail != null && UniqueEmail == false">Email already in use</span>
            </span>
        </div>
    </div>
    <div class="form-group m-form__group row">
        <div class="col-lg-4">
            <label class="mandatory">Phone No.</label>
            <input class="form-control m-input" name="phone" ng-model="fleet_owner.PhoneNo" ng-Phone required />
            <span class="text-danger" ng-show="(frm.phone.$touched || frm.phone.$dirty && frm.phone.$invalid)">
                <span ng-show="frm.phone.$error.required">Enter phone number</span>
                @*<span ng-show="frm.phone.$error.maxlength">max lenght exceed by 15</span>*@
            </span>
        </div>
        <div class="col-lg-4">
            <label class="mandatory">Address</label>
            <input type="text" class="form-control m-input" name="address" ng-model="fleet_owner.Address" required/>
            <span class="text-danger" ng-show="(frm.address.$touched || frm.address.$dirty && frm.address.$invalid)">
                <span ng-show="frm.address.$error.required">Enter address</span>
            </span>
        </div>
        <div class="col-lg-4">
            <label class="mandatory">Country</label>
            <select id="pdrpCountry" class="form-control" onchange="getStates('profile')" tabindex="-98">
            </select>
        </div>
    </div>
    <div class="form-group m-form__group row">
        <div class="col-lg-4">
            <label class="mandatory">State</label>
            <select onchange="getCities('profile')" id="pdrpState" tabindex="-98">
                <option value="0">--Select Country First--</option>
            </select>
        </div>
        <div class="col-lg-4">
            <label class="mandatory">City</label>
            <select id="pdrpCity" name="pdrpCity" tabindex="-98">
                <option value="0">--Select State First--</option>
            </select>
        </div>
        <div class="col-lg-4">
            <label>Zip Code</label>
            <input class="form-control m-input" name="pzip" ng-model="fleet_owner.PZipCode" ng-Zip/>
            @*<span class="text-danger" ng-show="(frm.pzip.$touched || frm.pzip.$dirty && frm.pzip.$invalid)">
                <span ng-show="frm.pzip.$error.maxlength">max lenght exceed by 5</span>
            </span>*@
        </div>
    </div>
    <div class="form-group m-form__group row">
        <div class="col-lg-4">
            <label class="mandatory">Select Corporate User</label>
            <select id="drpCorporateUser" class="form-control" tabindex="-98">
                    <option value="0">--Select Corporate User--</option>
            </select>
        </div>
        <div class="col-lg-4">
            <label>Profile Picture</label>
            <div></div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" accept="image/*" ng-image ng-model="fleet_owner.Picture">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
        </div>
    </div>

    <br /> <h4>Company Information</h4> <hr />
    <div class="form-group m-form__group row">
        <div class="col-lg-4">
            <label class="mandatory">Company Name</label>
            <input type="text" class="form-control m-input" name="companyName" ng-model="fleet_owner.CompanyName"  required/>
            <span class="text-danger" ng-show="(frm.companyName.$touched || frm.companyName.$dirty && frm.companyName.$invalid)">
                <span ng-show="frm.companyName.$error.required">Enter company name</span>
            </span>
        </div>
        <div class="col-lg-4">
            <label class="mandatory">Company Contact Number</label>
            <input name="companyContact" class="form-control m-input" ng-model="fleet_owner.CContactNo" ng-Phone required/>
            <span class="text-danger" ng-show="(frm.companyContact.$touched || frm.companyContact.$dirty && frm.companyContact.$invalid)">
                <span ng-show="frm.companyContact.$error.required">Enter company contact</span>
                @*<span ng-show="frm.companyContact.$error.maxlength">max lenght exceed by 15</span>*@
            </span>
        </div>
        <div class="col-lg-4">
            <label>Power Bi embedded code</label>
            <input type="text" class="form-control m-input" ng-model="fleet_owner.BIEmbededCode" />
        </div>
    </div>
    <div class="form-group m-form__group row">
        <div class="col-lg-4">
            <label class="mandatory">Country</label>
                <select id="cdrpCountry" class="form-control" onchange="getStates('company')" tabindex="-98">
                </select>
        </div>
        <div class="col-lg-4">
            <label class="mandatory">State</label>
            <select onchange="getCities('company')" id="cdrpState" tabindex="-98">
                <option value="0">--Select Country First--</option>
            </select>
        </div>
        <div class="col-lg-4">
            <label class="mandatory">City</label>
            <select id="cdrpCity" name="pdrpCity" tabindex="-98">
                <option value="0">--Select State First--</option>
            </select>
        </div>
    </div>
    <div class="form-group m-form__group row">
        <div class="col-lg-4">
            <label>Zip Code</label>
            <input  name="czipcode" ng-model="fleet_owner.CZipCode" ng-Zip class="form-control m-input" />
            @*<span class="text-danger" ng-show="(frm.czipcode.$touched || frm.czipcode.$dirty && frm.czipcode.$invalid)">
                <span ng-show="frm.czipcode.$error.maxlength">max lenght exceed by 5</span>
            </span>*@
        </div>
        <div class="col-lg-4">
            <label class="mandatory">Fax Number</label>
            <input ng-model="fleet_owner.FaxNo" ng-Num="15" name="fax" class="form-control m-input" required />
            <span class="text-danger" ng-show="(frm.fax.$touched || frm.fax.$dirty && frm.fax.$invalid)">
                <span ng-show="frm.fax.$error.required">Enter fax number</span>
                <span ng-show="frm.fax.$error.maxlength">max lenght exceed by 15</span>
            </span>
        </div>
        <div class="col-lg-4">
            <label class="mandatory">Bill to Address</label>
            <input type="text" class="form-control m-input" name="billAddress" id="billToAddress" ng-model="fleet_owner.BillToAddress" BillToAddress required/>
            <span class="text-danger" ng-show="(frm.billAddress.$touched || frm.billAddress.$dirty && frm.billAddress.$invalid)">
                <span ng-show="frm.billAddress.$error.required">Enter Bill To Address</span>
            </span>
        </div>
    </div>
    <div class="form-group m-form__group row">
        <div class="col-lg-4">
            <label class="col-10">
                <span class="m-list-settings__item-label">
                    Is company address same as profile address?
                </span>
            </label>
            <div class="m-list-settings__item col-2">
                <span class="m-list-settings__item-control">
                    <span class="m-switch m-switch--icon m-switch--success">
                        <label>
                            <input type="checkbox" name="" ng-click="sameAddresses($event)">
                            <span></span>
                        </label>
                    </span>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group m-form__group">
        @*<button ng-disabled="frm.$invalid || UniqueEmail != true" ng-click="save()" class="btn m-btn--square btn-success">Submit</button>*@
        <button ng-disabled="frm.$invalid" ng-mousedown="save()" class="btn m-btn--square btn-success">Submit</button>
        <a @*href="/FleetOwner/FleetOwnerList"*@ ng-mousedown="Cancel()" class="btn m-btn--square btn-danger">Cancel</a>
        <p class="text-danger" style="display:none">Please fill all mandatory fields</p>
    </div>
</form>
