                                            <input type="text" class="form-control" id="m_datepicker_2" readonly="" name="startDate" placeholder="Site start date" ng-model="site.SiteStartDate" required>
                                            <span class="text-danger" ng-show="(frm.startDate.$touched || frm.startDate.$dirty && frm.startDate.$invalid)">
                                                <span ng-show="frm.startDate.$error.required">Enter start date</span>
                                            </span>
                                        </div>
                                        <div class="col-lg-4">
                                            <label class="mandatory">Site End Date</label>
                                            <input type="text" class="form-control" id="m_datepicker_3" readonly="" placeholder="Site end date" ng-model="site.SiteEndDate" name="endDate" required>
