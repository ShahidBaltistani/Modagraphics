                                                    <span class="m-switch m-switch--icon m-switch--success">
                                                        <label>
                                                            <input type="checkbox" ng-model="site.IndoorFacility">
                                                            <span></span>
                                                        </label>
                                                    </span>
                                                </span>
                                            </div>
