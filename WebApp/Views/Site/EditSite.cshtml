                                <div class="m-wizard__form-step" id="m_wizard_form_step_1">
                                    <br /> <h4>Site Information</h4> <hr />
                                    <div class="form-group m-form__group row">
                                        <div class="col-lg-4">
                                            <label class="mandatory">Site Name</label>
                                            <input type="text" class="form-control m-input" name="sitename" ng-model="site.Name" required nameregex />
                                            <span class="text-danger" ng-show="(frm.sitename.$touched || frm.sitename.$dirty && frm.sitename.$invalid)">
                                                <span ng-show="frm.sitename.$error.required">Enter site name</span>
                                            </span>
                                        </div>
                                        <div class="col-lg-4">
                                            <label class="mandatory">Fleet Owner</label>
                                            <select class="form-control" tabindex="-98" id="drpFleetOwner">
                                                
                                            </select>
                                        </div>
                                        <div class="col-lg-4">
                                            <label class="mandatory">Project Name</label>
                                            <select class="form-control" tabindex="-98" id="drpProject">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group m-form__group row">
                                        <div class="col-lg-4">
                                            <label class="mandatory">CSR</label>
                                            <input type="text" class="form-control m-input" ng-model="site.CSR" name="csr" required />
                                            <span class="text-danger" ng-show="(frm.csr.$touched || frm.csr.$dirty && frm.csr.$invalid)">
                                                <span ng-show="frm.csr.$error.required">Enter csr</span>
                                            </span>
                                        </div>
