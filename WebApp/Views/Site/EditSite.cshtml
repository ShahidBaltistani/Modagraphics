                                            <div class="m-radio-inline">
                                                <label class="m-radio m-radio--solid m-radio--brand">
                                                    <input type="radio" name="account_group" value="0" ng-model="site.TakeDownStatus">
                                                    Site
                                                    <span></span>
                                                </label>
                                                <label class="m-radio m-radio--solid m-radio--brand">
                                                    <input type="radio" name="account_group" value="1" ng-model="site.TakeDownStatus">
                                                    Vehicle Type
                                                    <span></span>
                                                </label>
                                                <label class="m-radio m-radio--solid m-radio--brand">
                                                    <input type="radio" name="account_group" value="2" ng-model="site.TakeDownStatus">
                                                    None
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--end: Form Wizard Step 1-->
                                <!--begin: Form Wizard Step 2-->
                                <div class="m-wizard__form-step m-wizard__form-step--current" id="m_wizard_form_step_2">
