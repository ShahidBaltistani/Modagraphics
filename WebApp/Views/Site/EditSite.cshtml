                                            <label class="mandatory">Sales Man</label>
                                            <input type="text" class="form-control m-input" ng-model="site.SalesMan" name="saleman" required />
                                            <span class="text-danger" ng-show="(frm.saleman.$touched || frm.saleman.$dirty && frm.saleman.$invalid)">
                                                <span ng-show="frm.saleman.$error.required">Enter sale man</span>
                                            </span>
                                        </div>
                                        @*<div class="col-lg-4">
                                            <label class="col-10">
                                                <span class="m-list-settings__item-label m-switch--icon">
                                                    Is it for bid?
                                                </span>
                                            </label>
                                            <div class="m-list-settings__item col-2">
                                                <span class="m-list-settings__item-control">
                                                    <span class="m-switch m-switch--icon m-switch--success">
                                                        <label>
                                                            <input type="checkbox" ng-model="site.IsForBid">
                                                            <span></span>
                                                        </label>
                                                    </span>
                                                </span>
                                            </div>
                                        </div>*@
